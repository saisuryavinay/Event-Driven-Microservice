# Kafka Configuration
KAFKA_BROKERS=kafka:29092
KAFKA_TOPIC=user-activity-events
KAFKA_CONSUMER_GROUP=user-activity-consumer-group

# Application Configuration
PORT=3000
NODE_ENV=production

# Kafka Producer Configuration
KAFKA_PRODUCER_TIMEOUT_MS=30000
KAFKA_PRODUCER_RETRIES=3
KAFKA_PRODUCER_RETRY_BACKOFF_MS=100

# Kafka Consumer Configuration
KAFKA_CONSUMER_SESSION_TIMEOUT_MS=30000
KAFKA_CONSUMER_HEARTBEAT_INTERVAL_MS=3000
KAFKA_CONSUMER_AUTO_COMMIT_ENABLED=true
KAFKA_CONSUMER_AUTO_COMMIT_INTERVAL_MS=5000
